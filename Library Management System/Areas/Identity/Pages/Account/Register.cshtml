@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_SignIn&SignUpLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-sm p-4 w-100" style="max-width: 800px;">
        <div class="text-center mb-4">
            <h2 class="mb-1">Sign Up</h2>
            <p class="text-muted">Create your student account</p>
        </div>

        <form id="registerForm" method="post" asp-route-returnUrl="@Model.ReturnUrl" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="row g-3">
                <div class="col-md-6 form-floating">
                    <input asp-for="Input.FullName" class="form-control" placeholder="Dipak M. Dhrangi" />
                    <label asp-for="Input.FullName">Full Name</label>
                    <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="Input.Enrollment" class="form-control" placeholder="Enrollment Number" />
                    <label asp-for="Input.Enrollment">Enrollment</label>
                    <span asp-validation-for="Input.Enrollment" class="text-danger small"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="9876543210" />
                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="Input.Department" class="form-control" placeholder="Computer Engineering" />
                    <label asp-for="Input.Department">Department</label>
                    <span asp-validation-for="Input.Department" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.IdCard" class="form-label">Upload ID Card</label>
                    <input asp-for="Input.IdCard" type="file" class="form-control" />
                    <span asp-validation-for="Input.IdCard" class="text-danger small"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button id="registerSubmit" type="submit" class="btn btn-primary w-50">Sign Up</button>
            </div>

            <div class="mt-3 text-center">
                <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="small">Sign In</a></p>
                <p>By signing up, you agree to our <a href="#">Terms</a> and <a href="#">Privacy Policy</a>.</p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
