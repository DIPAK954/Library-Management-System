@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    Layout = Model.UserRole == "Admin" ? "~/views/shared/_layout.cshtml" : "_StudentLayout";
}

<div class="container py-4">
    <div class="card shadow-sm p-4">
        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-md-4 text-center border-end">
                <form method="post" enctype="multipart/form-data" asp-page-handler="ChangePassword">
                    <!-- Profile Image -->
                    <div class="position-relative d-inline-block">
                        <img id="profileImagePreview"
                             src="@(string.IsNullOrEmpty(Model.Input.IdCard) ? Url.Content("~/default-profile.png") : Model.Input.IdCard)"
                             class="rounded img-fluid border"
                             alt="Profile"
                             style="width: 200px; height: 200px; object-fit: cover;">
                        <label for="profileImageUpload"
                               class="btn btn-primary mt-3 w-100">Upload Photo</label>
                        <input type="file" id="profileImageUpload" name="Input.IdCard" class="d-none" accept="image/*" />
                    </div>

                    <!-- Password Change -->
                    <div class="mt-4 text-start">
                        <div class="mb-3">
                            <label asp-for="Input.OldPassword" class="form-label"></label>
                            <input asp-for="Input.OldPassword" class="form-control" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label"></label>
                            <input asp-for="Input.NewPassword" class="form-control" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <button class="btn btn-primary w-100">Change Password</button>
                </form>
            </div>

            <!-- Right Column -->
            <div class="col-md-8">
                <form method="post" enctype="multipart/form-data" asp-page-handler="UpdateProfile">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Profile Information -->
                    <h5 class="mb-3">Profile Information</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Username" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" disabled />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.FullName" class="form-label">Full Name</label>
                            <input asp-for="Input.FullName" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Enrollment" class="form-label">Enrollment</label>
                            <input asp-for="Input.Enrollment" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Department" class="form-label">Department</label>
                            <input asp-for="Input.Department" class="form-control" />
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <h5 class="mt-4 mb-3">Contact Info</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success px-5">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Live Image Preview
        document.getElementById('profileImageUpload').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                document.getElementById('profileImagePreview').src = URL.createObjectURL(file);
            }
        });
    </script>
}
