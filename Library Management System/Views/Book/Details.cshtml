@model Library.Common.Models.BookModel

@{
    ViewData["Title"] = "Book Details";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mt-5 mb-5">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back To List
    </a>
</div>

<div class="card shadow">
    <div class="card-body p-4">

        <!-- Row: Image on Left, Key Info on Right -->
        <div class="row g-4 align-items-center">
            <!-- Book Image -->
            <div class="col-lg-4 text-center">
                <img src="@Model.CoverImagePath"
                     class="img-fluid rounded-3 shadow-sm border border-2"
                     alt="Book Cover"
                     style="max-height: 350px; object-fit: cover;" />
            </div>

            <!-- Main Book Info -->
            <div class="col-lg-8">
                <h2 class="fw-bold">@Model.Title</h2>
                <p class="text-muted mb-1"><i class="bi bi-person-fill"></i> <strong>Author:</strong> @Model.Author</p>
                <p class="text-muted mb-1"><i class="bi bi-upc-scan"></i> <strong>ISBN:</strong> @Model.ISBN</p>
                <p class="text-muted mb-1"><i class="bi bi-tags-fill"></i> <strong>Genre:</strong> @Model.Genre</p>
                <p class="text-muted mb-1"><i class="bi bi-translate"></i> <strong>Language:</strong> @Model.Language</p>
                <p class="text-muted mb-1"><i class="bi bi-building"></i> <strong>Publisher:</strong> @Model.Publisher</p>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Bottom Section: Additional Info -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <p class="mb-1"><strong>Published Date:</strong> @Model.PublishedDate.ToString("dd MMMM yyyy")</p>
                <p class="mb-1"><strong>Total Copies:</strong> @Model.TotalCopies</p>
                <p class="mb-1"><strong>Available Copies:</strong> @Model.AvailableCopy</p>
            </div>
            <div class="col-md-6 mb-3">
                <p class="mb-1">
                    <strong>Status:</strong>
                    <span class="badge @((Model.Status == 0) ? "bg-success" : "bg-danger")">
                        @(Model.Status == 0 ? "Available" : "Unavailable")
                    </span>
                </p>
            </div>
            <div class="col-12">
                <p class="mt-3"><strong>Description:</strong></p>
                <p class="text-secondary">@Model.Description</p>
            </div>
        </div>

    </div>
</div>
