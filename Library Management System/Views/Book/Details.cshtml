@model Library.Common.Models.BookModel

@{
    ViewData["Title"] = "Book Details";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mt-5 mb-5">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back To List
    </a>
</div>

<div class="card shadow">
    <div class="card-body p-4">

        <div class="row g-4">

            <!-- Column 1: Book Image -->
            <div class="col-md-4 text-center">
                <img src="@Model.CoverImagePath"
                     class="img-fluid rounded shadow border border-2"
                     alt="Book Cover"
                     style="max-height: 350px; object-fit: cover;" />
            </div>

            <!-- Column 2: Key Book Info -->
            <div class="col-md-4">
                <h3 class="fw-bold">@Model.Title</h3>
                <p><strong>Author:</strong> @Model.Author</p>
                <p><strong>ISBN:</strong> @Model.ISBN</p>
                <p><strong>Genre:</strong> @Model.Genre</p>
                <p><strong>Language:</strong> @Model.Language</p>
                <p><strong>Publisher:</strong> @Model.Publisher</p>
                <p><strong>Published:</strong> @Model.PublishedDate.ToString("dd MMM yyyy")</p>
            </div>

            <!-- Column 3: Remaining Details -->
            <div class="col-md-4">
                <p><strong>Total Copies:</strong> @Model.TotalCopies</p>
                <p><strong>Available Copies:</strong> @Model.AvailableCopy</p>
                <p>
                    <strong>Status:</strong>
                    <span class="badge @((Model.Status == 0) ? "bg-success" : "bg-danger")">
                        @(Model.Status == 0 ? "Available" : "Archived")
                    </span>
                </p>
                <p><strong>Description:</strong></p>
                <div class="text-secondary" style="max-height: 200px; overflow-y: auto;">
                    @Model.Description
                </div>
            </div>

        </div>

    </div>
</div>
