@{
    ViewData["Title"] = "Dashboard";
    Layout = "_StudentLayout";
}

<div class="d-flex justify-content-between align-items-center mt-3 mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
</div>

<div class="container">

    <!-- Stat Cards -->
    <div class="row g-4 mb-4">
        <!-- Total Books Borrowed -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                        <i class="bi bi-journal-arrow-up fs-5"></i>
                    </div>
                    <div>
                        <p class="mb-0 text-muted">Borrowed Books</p>
                        <h5 class="mb-0 fw-bold">@ViewBag.BorrowedBooks</h5>
                    </div>
                </div>
            </div>
        </div>

        <!-- Books Due -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-warning text-white rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                        <i class="bi bi-clock-history fs-5"></i>
                    </div>
                    <div>
                        <p class="mb-0 text-muted">Books Due</p>
                        <h5 class="mb-0 fw-bold text-danger">@ViewBag.DueBooks</h5>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Fine -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-danger text-white rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                        <i class="bi bi-cash-coin fs-5"></i>
                    </div>
                    <div>
                        <p class="mb-0 text-muted">Pending Fine</p>
                        <h5 class="mb-0 fw-bold text-success">₹@ViewBag.TotalFine</h5>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lost Books -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-dark text-white rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                        <i class="bi bi-journal-x fs-5"></i>
                    </div>
                    <div>
                        <p class="mb-0 text-muted">Lost Books</p>
                        <h5 class="mb-0 fw-bold text-success">@ViewBag.TotalLostBooks</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Popular Book -->
    <h4>📈 Popular Books</h4>
    <div class="container mt-4">
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
            @foreach (var book in ViewBag.popularBooks)
            {
                <div class="col">
                    <a href="/StudentBookRequest/RequestBook/@book.Id" style="text-decoration: none; color: inherit;">
                        <div class="card h-100 border-0 shadow-sm" style="width: 100%; min-height: 100%;">

                            <div style="height: 220px; background-color: #f7f7f7; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                <img src="@Url.Content(book.CoverImagePath ?? "~/images/default-book.png")"
                                     alt="@book.Title"
                                     style="max-height: 100%; width: auto; object-fit: contain;" />
                            </div>

                            <div class="card-body p-2">
                                <h6 class="card-title text-truncate" title="@book.Title" style="font-weight: 600;">
                                    @book.Title
                                </h6>

                                <p class="text-muted mb-1" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    by @book.Author
                                </p>

                                <span class="badge mt-2 @(book.Status == 0 ? "bg-success" : "bg-danger")">
                                    @(book.Status == 0 ? "Available" : "Archived")
                                </span>
                            </div>

                        </div>
                    </a>
                </div>
            }
        </div>
    </div>


    <!-- New Arrivals -->
    <h4 class="mt-4">🆕 New Arrivals</h4>
    <div class="container mt-4">
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
                @foreach (var book in @ViewBag.newArrivals)
                {
                    <div class="col">
                        <a href="/StudentBookRequest/RequestBook/@book.Id" style="text-decoration: none; color: inherit;">
                            <div class="card h-100 border-0 shadow-sm" style="width: 100%; min-height: 100%;">

                                <div style="height: 220px; background-color: #f7f7f7; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                    <img src="@Url.Content(book.CoverImagePath ?? "~/images/default-book.png")"
                                         alt="@book.Title"
                                         style="max-height: 100%; width: auto; object-fit: contain;" />
                                </div>

                                <div class="card-body p-2">
                                    <h6 class="card-title text-truncate" title="@book.Title" style="font-weight: 600;">
                                        @book.Title
                                    </h6>

                                    <p class="text-muted mb-1" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        by @book.Author
                                    </p>

                                    <span class="badge mt-2 @(book.Status == 0 ? "bg-success" : "bg-danger")">
                                        @(book.Status == 0 ? "Available" : "Archived")
                                    </span>
                                </div>

                            </div>
                        </a>
                    </div>
                }
            </div>
    </div>
</div>
