<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library_Management_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Library_Management_System.styles.css" asp-append-version="true" />
    <link href="~/lib/datatables.net-dt/css/datatables.datatables.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
     <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .main-container {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        .sidebar {
            width: 220px;
            background-color: #3c0b2d;
            padding-top: 1rem;
            position: fixed;
            top: 56px;
            bottom: 56px;
            left: 0;
            overflow-y: auto;
        }

        .content-area {
            margin-left: 220px;
            padding: 1rem;
            overflow-y: auto;
            flex-grow: 1;
            margin-top: 56px;
            margin-bottom: 56px;
        }

        footer {
            height: 56px;
            line-height: 56px;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Fixed Navbar -->
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Library</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>

        <div class="main-container">
            <!-- Sidebar -->
            <aside class="sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white d-flex align-items-center" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2 fs-2"></i><span class="ps-2">Dashboard</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white d-flex align-items-center" asp-controller="Books" asp-action="Index"><i class="bi bi-book fs-2"></i><span class="ps-2">Book</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white d-flex align-items-center" asp-controller="Issue" asp-action="Index"><i class="bi bi-send fs-2"></i><span class="ps-2">Issue Book</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white d-flex align-items-center" asp-controller="Request" asp-action="Index"><i class="bi bi bi-journal-plus fs-2"></i><span class="ps-2">Book Request</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white d-flex align-items-center" asp-controller="Student" asp-action="Index"><i class="bi bi-person fs-2"></i><span class="ps-2">Student</span></a>
                    </li>
                </ul>
            </aside>

            <!-- Main Content -->
            <main class="content-area">
                @RenderBody()
            </main>
        </div>

        <!-- Fixed Footer -->
        <footer class="footer bg-dark text-white text-center fixed-bottom">
            <div class="container">
                &copy; 2025 - Library Management System
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/datatables.net-dt/js/datatables.datatables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
